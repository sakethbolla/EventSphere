# EventSphere Deployment Configuration
# Copy this file to config.env and update with your values
# DO NOT commit config.env to version control

# AWS Configuration
# Leave empty to auto-detect from AWS CLI
export AWS_ACCOUNT_ID="${AWS_ACCOUNT_ID:-}"
export AWS_REGION="${AWS_REGION:-us-east-1}"

# ECR Configuration (auto-calculated if AWS_ACCOUNT_ID is set)
# Format: ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com
export ECR_REGISTRY="${ECR_REGISTRY:-${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com}"

# ACM Certificate ARN for HTTPS/TLS
# Get this from: aws acm list-certificates --region us-east-1
export ACM_CERTIFICATE_ARN="${ACM_CERTIFICATE_ARN:-}"

# IAM Role ARNs (auto-calculated if AWS_ACCOUNT_ID is set)
export FLUENT_BIT_ROLE_ARN="${FLUENT_BIT_ROLE_ARN:-arn:aws:iam::${AWS_ACCOUNT_ID}:role/fluent-bit-role}"
export EXTERNAL_SECRETS_ROLE_ARN="${EXTERNAL_SECRETS_ROLE_ARN:-arn:aws:iam::${AWS_ACCOUNT_ID}:role/external-secrets-role}"

# Cluster Configuration
export CLUSTER_NAME="${CLUSTER_NAME:-eventsphere-cluster}"

