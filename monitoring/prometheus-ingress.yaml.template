# Ingress for Prometheus
# This exposes Prometheus at: https://prometheus.enpm818rgroup7.work.gd
#
# IMPORTANT: Add DNS record for prometheus.enpm818rgroup7.work.gd
# pointing to the same ALB as your main application.

apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: prometheus-ingress
  namespace: monitoring
  annotations:
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/target-type: ip
    alb.ingress.kubernetes.io/listen-ports: '[{"HTTP": 80}, {"HTTPS": 443}]'
    alb.ingress.kubernetes.io/ssl-redirect: '443'
    # Use the same certificate as your main app
    alb.ingress.kubernetes.io/certificate-arn: ${ACM_CERTIFICATE_ARN}
    alb.ingress.kubernetes.io/healthcheck-path: /-/healthy
    alb.ingress.kubernetes.io/group.name: eventsphere  # Share ALB with main app
    alb.ingress.kubernetes.io/tags: Environment=production,Project=EventSphere
  labels:
    app: monitoring
spec:
  ingressClassName: alb
  rules:
    - host: prometheus.enpm818rgroup7.work.gd
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: prometheus-kube-prometheus-prometheus
                port:
                  number: 9090
